# Spotify API Credentials
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Spotify API Redirect URI (for OAuth)
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/auth/callback/spotify

# Spotify API Scopes (comma-separated)
SPOTIFY_SCOPES=user-read-private,user-read-email,user-read-recently-played,user-top-read,playlist-read-private,playlist-read-collaborative

# Application Environment
NODE_ENV=development

# Application Port
PORT=3000